	<div class="row">
        <% if flash[:notice] %>
	      <div class="flash">
	  	    <%= flash[:notice] %>
	      </div>
	    <% end %>
		<div class="col-xs-3">
            <%= render :partial => 'layouts/profile', :locals => {:user => @user}%>
            <%= render :partial => 'layouts/form', :locals => {:book => @book}%>
		</div>
	    <div class="col-xs-9">
	    	<div >
                <h2>Book detail</h2>
	    		<table class="table">
	    		  <tbody>
	    			<tr>
	    				<td><%= attachment_image_tag @showbook.user, :profile_image, :fill, 40, 40, class: "img-round",fallback: "no_image.jpg" %>
	    					<%= link_to user_path(@showbook.user) do %>
	    					  <p><%= @showbook.user.name %></p>
	    					<% end %>
	    				</td>
	    				<td>
	    					<%= link_to book_path(@showbook) do %>
	    					  <%= @showbook.title %>
	    					<% end %>
	    				</td>
	    				<td><%= @showbook.body %></td>
	    				<!-- いいね---------------------------------------- -->
	    				<td>
	    				  <% if @showbook.favorited_by?(current_user) %>
	    				      <%= link_to book_favorite_path(@showbook), method: :delete do %>
	    					    <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
	    					  <% end %>
	    				  <% else %>
	    				      <%= link_to book_favorites_path(@showbook), method: :post do %>
	    					    <span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span>
	    					  <% end %>
	    				  <% end %>
	    				  <%= @showbook.favorites.count %>
	    			    </td>
	    				<td>コメント数: <%= @showbook.book_comments.count %></td>
	    				<!-- edit,delete-------------------------------------------- -->
	    				<% if @user == current_user %>
	    				<td>
	    					<div class="btn btn-success btn-xs">
	    					  <%= link_to "Edit", edit_book_path(@showbook) %>
	    					</div>
	    				</td>
	    				<td>
	    					<div class="btn btn-danger btn-xs">
	    					  <%= link_to "Destroy", book_path(@showbook), method: :delete %>
	    				    </div>
	    				</td>
	    				<% end %>
	    				<!---------------------------------------------------------- -->
	    			</tr>
	    		  </tbody>
	    		</table>
	    	</div>
	    	<div>
	    		<h3>Comment</h3>
	    		<table class="table">
	    			<thead>
	    				<tr>
	    					<th></th>
	    					<th></th>
	    					<th></th>
	    				</tr>
	    			</thead>
	    			<tbody>
	    				<% @showbook.book_comments.each do |comment| %>
	    				<tr>
	    					<td>
	    					  <div>
	    					  <%= link_to user_path(comment.user) do %>
	    					    <%= attachment_image_tag comment.user, :profile_image, :fill, 40, 40, class: "img-round",fallback: "no_image.jpg" %>
	    					  <% end %>
	    					  </div>
	    					  <div>
	    					  	<%= link_to user_path(comment.user) do %>
	    					  	  <%= comment.user.name %>
	    					  	<% end %>
	    					  </div>
	    					</td>
	    					<td>
	    						<%= comment.comment %>
	    					</td>
	    					<!-- ---------------currentuser--------------------- -->
	    					<% if comment.user == current_user %>
	    					<td>
	    						<div class="btn btn-danger btn-xs">
	    						  <%= link_to "削除", book_book_comment_path(@showbook), method: :delete %>
	    						</div>
	    					</td>
	    					<!-- ------------------------------------------------ -->
	    					<% end %>
	    				</tr>
	    				<% end %>
	    			</tbody>
	    		</table>
	    		<div class="form-group">
	    		<%= form_for [@showbook, @book_comment] do |f| %>
                  <%= f.text_area :comment, :style => 'width: 70%;'%>
                   <%= f.submit "送信"%>
                <% end %>
                </div>
	    	</div>
	    </div>
	</div>