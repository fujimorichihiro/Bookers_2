	<div class="row">
        <% if flash[:notice] %>
	      <div class="flash">
	  	    <%= flash[:notice] %>
	      </div>
	    <% end %>
		<div class="col-xs-3">
            <%= render :partial => 'layouts/profile', :locals => {:user => @user}%>
            <%= render :partial => 'layouts/form', :locals => {:book => @book}%>
		</div>
	    <div class="col-xs-9">
	    	<div >
                <h2>Book detail</h2>
	    		<table class="table">
	    		  <tbody>
	    			<tr>
	    				<td><%= attachment_image_tag @books.user, :profile_image, :fill, 40, 40, class: "img-round",fallback: "no_image.jpg" %>
	    					<%= link_to user_path(@books.user) do %>
	    					  <p><%= @books.user.name %></p>
	    					<% end %>
	    				</td>
	    				<td>
	    					<%= link_to book_path(@books) do %>
	    					  <%= @books.title %>
	    					<% end %>
	    				</td>
	    				<td><%= @books.body %></td>
	    				<% if @user == current_user %>
	    				<td><%= link_to "Edit", edit_book_path(@books) %></td>
	    				<td><%= link_to "Destroy", book_path(@books), method: :delete %></td>
	    				<% end %>
	    			</tr>
	    		  </tbody>
	    		</table>
	    	</div>
	    </div>
	</div>