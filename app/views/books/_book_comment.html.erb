<% showbook.book_comments.each do |comment| %>
<div class="row">
  <div class="col-xs-10">
  <div class="row comment-box">
    <div class="col-xs-1">
      <%= link_to user_path(comment.user) do %>
      <%= attachment_image_tag comment.user, :profile_image, :fill, 40, 40, class: "img-circle",fallback: "no_image.jpg" %>
      <% end %>
    </div>
    <div class="col-xs-11">
      <div class="name-box">
        <%= link_to user_path(comment.user) do %>
          <%= comment.user.name %>
        <% end %>
      </div>
      <div>
        <%= comment.comment %>
      </div>
      <div class="pull-right">
        <%= comment.created_at.to_s(:datetime_jp) %>
        <% if comment.user == current_user %>
          <%= link_to book_book_comment_path(comment.book_id, comment.id), method: :delete, remote: true do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true" style="color: red;"></span>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  </div>
  <div class="col-xs-2">
  </div>
</div>
<% end %>
