<% showbook.book_comments.each do |comment| %>
<tr class="active">
  <td>
    <div>
	  <%= link_to user_path(comment.user) do %>
	    <%= attachment_image_tag comment.user, :profile_image, :fill, 40, 40, class: "img-round",fallback: "no_image.jpg" %>
	  <% end %>
    </div>
    <div>
	  <%= link_to user_path(comment.user) do %>
	     <%= comment.user.name %>
      <% end %>
    </div>
  </td>
  <td>
    <%= comment.comment %>
  </td>

  <% if comment.user == current_user %>
    <td>
	  <div class="btn btn-danger btn-xs">
        <%= link_to "削除", book_book_comment_path(comment.book_id, comment.id), method: :delete, remote: true %>
	  </div>
    </td>
  <% else %>
    <td>
    </td>
  <% end %>
</tr>
<% end %>