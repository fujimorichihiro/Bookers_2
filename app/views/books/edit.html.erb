<div class="row">
	<div class="col-xs-3">
	</div>
	<div class="col-xs-6">
	  <div  style="color: red;">
        <% if @book.errors.any? %>
            <h5 class="error-message"><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h5>
            <ul class="error-text">
              <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
        <% end %>
      </div>
      <div>
	    <h2>Editing Book</h2>
	     <%=form_for (@book) do |f|%>
	       <div class="form-group">
	         <label>Title</label>
	         <p><%= f.text_field :title, :class=> 'form-control' %></p>
	       </div>
	       <div class="form-group">
	         <label>Opinion</label>
	         <p><%= f.text_area :body, :class=> 'form-control' %></p>
	       </div>
	       <div>
	  	    <%= f.submit "Update Book", class: "btn btn-primary btn-block"%>
	       </div>
	     <% end %>
      </div>
      <div>
	    <%= link_to "Show", book_path(@book) %>
	    <span>|</span>
	    <%= link_to "Back", books_path %>
      </div>
    </div>
    <div class="col-xs-3">
    </div>
</div>